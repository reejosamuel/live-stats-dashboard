<div class="container">
  <div class="col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4 col-xs-12">

    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "form-control-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :mobile, class: "form-control-label" %><br />
        <%= f.text_field :mobile, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-control-label" %>
        <% if @minimum_password_length %>
        <i>(<%= @minimum_password_length %> characters minimum)</i>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "form-control-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>